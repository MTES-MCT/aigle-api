[Unit]
Description=Celery Service
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/aigle-api
ExecStartPre=/bin/bash -c 'set -a && source /home/ubuntu/aigle-api/.env && set +a'
ExecStart=/bin/bash -c 'set -a && source /home/ubuntu/aigle-api/.env && set +a && /home/ubuntu/aigle-api/venv/bin/celery -A aigle worker --loglevel=info --concurrency=1 --prefetch-multiplier=1 -Q sequential_commands'
Restart=always

[Install]
WantedBy=multi-user.target
